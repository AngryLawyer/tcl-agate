package require tcltest
namespace import ::tcltest::test
namespace import ::tcltest::cleanupTests

source ../src/agate.tcl

test setRoutes {
    Adding a route should put it in the routes table
} -body {
    set app [agate::application]
    agate::router::setRoute app get "/" {}
    return [agate::router::getRoutes app get]
} -result {{/ {}}}

test matchRoute {
    Simple paths should match
} -body {
    set app [agate::application]
    agate::router::setRoute app get "/" {{} puts trololo}
    return [agate::router::matchRoute app get "/"]
} -result {{} puts trololo}

cleanupTests
